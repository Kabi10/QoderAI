# Universal Prompt Generator Environment Variables
# Copy this file to .env and configure with your values

# Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# System Configuration
MAX_FILE_SIZE=5242880
MAX_GENERATION_TIME=30000
OUTPUT_ENCODING=utf8

# Template Engine Settings
TEMPLATE_DELIMITER={{|}}
ESCAPE_HTML=false
ALLOW_PROTO_ACCESS=false
STRICT_MODE=true

# File Generation Settings
DEFAULT_PERMISSIONS=0644
CREATE_DIRECTORIES=true
OVERWRITE_FILES=false
BACKUP_EXISTING=true

# Validation Settings
ENABLE_SYNTAX_CHECK=true
ENABLE_SECURITY_SCAN=true
ENABLE_PERFORMANCE_CHECK=true
MAX_FILE_COUNT=100

# Security Settings
SANITIZE_INPUTS=true
VALIDATE_FILE_TYPES=true
PREVENT_PATH_TRAVERSAL=true
MAX_INPUT_LENGTH=10000

# Performance Settings
GENERATION_TIMEOUT=5000
TEMPLATE_RENDER_TIMEOUT=1000
VALIDATION_TIMEOUT=2000

# Quality Metrics
MIN_TEST_COVERAGE=80
MAX_CYCLOMATIC_COMPLEXITY=10
MAX_FUNCTION_LENGTH=50
MAX_FILE_LENGTH=500

# Git Integration (Optional)
GIT_BRANCH_PREFIX=category
GIT_COMMIT_FORMAT=feat(category): initialize PROJECT_NAME
GIT_TAG_FORMAT=v1.0.0-category-release

# Cloud Storage (Optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name

# Database (Optional - for usage analytics)
# DATABASE_URL=postgresql://user:password@localhost:5432/qoder_prompt_generator
# MONGODB_URI=mongodb://localhost:27017/qoder_prompt_generator

# External APIs (Optional)
# GITHUB_TOKEN=your_github_token
# OPENAI_API_KEY=your_openai_key

# Monitoring and Analytics (Optional)
# SENTRY_DSN=your_sentry_dsn
# ANALYTICS_KEY=your_analytics_key

# Development Tools
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false

# Testing Configuration
TEST_TIMEOUT=30000
TEST_OUTPUT_DIR=./test-output
CLEANUP_AFTER_TESTS=true

# CLI Settings
CLI_COLORS=true
CLI_PROGRESS_BAR=true
CLI_INTERACTIVE_MODE=true

# Template Paths
TEMPLATES_PATH=./templates
CATEGORIES_CONFIG_PATH=./config/categories
VALIDATION_RULES_PATH=./config/validation

# Output Paths
DEFAULT_OUTPUT_PATH=./generated
MANIFEST_FILE_NAME=qoder-manifest.json
USAGE_FILE_NAME=USAGE.md

# Feature Flags
ENABLE_CATEGORY_CACHING=true
ENABLE_TEMPLATE_PRELOADING=true
ENABLE_PARALLEL_GENERATION=true
ENABLE_AUTO_CLEANUP=true

# Rate Limiting (if running as service)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings (if running as service)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ENABLE_CREDENTIALS=true

# Backup and Recovery
BACKUP_GENERATED_FILES=true
BACKUP_RETENTION_DAYS=30
AUTO_CLEANUP_BACKUPS=true

# Documentation Generation
GENERATE_API_DOCS=true
INCLUDE_EXAMPLES=true
AUTO_UPDATE_DOCS=false