          <h1>{message}</h1>
          <p>Target Audience: {{targetAudience}}</p>
          
          <div className="counter-section">
            <p>Count: {count}</p>
            <div className="button-group">
              <button onClick={handleIncrement} className="btn btn-primary">
                Increment
